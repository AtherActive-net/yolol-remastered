{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"watch": true,
		"target": "ES6",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist/",
		"lib": ["ES2022"],
		"declaration": true,
		"module": "ES2020",
		"skipLibCheck": true,
		"baseUrl": "./",

		"paths": {
			"@core/*": ["./src/*"],
		}
	},
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true,
		"aliases": {
			"@core": "./src"
		}
	},
	"include": ["src/*"],
	"exclude": ["node_modules"],

	
}